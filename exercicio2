#include <stdio.h>
#include <stdlib.h>

int main() {
    int anos, meses, dias, diasVida;

    printf("Diga a sua idade em anos, meses e dias: Digite os anos ");
    scanf("%d", &anos);

    printf("Digite os meses: ");
    scanf("%d", &meses);

    printf("Digite os dias: ");
    scanf("%d", &dias);

    diasVida=(((anos*12)*30)+(meses*30)+dias);

    printf("Sua idade em dias e %d\n", diasVida);

    return 0;
}
