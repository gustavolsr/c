#include <stdio.h>
#include <stdlib.h>

int main() {
    int duracao, horas, minutos, segundos;

    printf("Diga a duracao do evento: ");
    scanf("%d", &duracao);

    horas=duracao/3600;

    minutos=duracao%3600/60;

    segundos=duracao%3600%30;

    printf("%d segundos equivalem a %d horas, %d minutos e %d segundos.\n", duracao, horas, minutos, segundos);


    return 0;
}
